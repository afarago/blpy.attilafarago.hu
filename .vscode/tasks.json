{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "tsc: watch - tsconfig.json"
    },
    {
      "label": "tsc: build",
      "type": "shell",
      "command": "tsc", // Or your TypeScript build command (e.g., "npm run build")
      "problemMatcher": "$tsc", // For error reporting
      "group": "build"
    }
  ]
}
